import pygame

pygame.init()
pygame.display.set_caption('timer')
screen = pygame.display.set_mode((360,160))
font = pygame.font.SysFont('Consolas',36)
color_bg = (255,255,205)
color_fg = (0,0,55)
screen.fill(color_bg)

text = ''
results = ''

run = True

seconds = 0
start = pygame.time.get_ticks()
stop = 0

while True:
    for e in pygame.event.get():
        if e.type == pygame.QUIT:
            pygame.quit()
        if e.type == pygame.KEYUP:
            if e.key == pygame.K_SPACE:
                if run == True:
                    stop = pygame.time.get_ticks()
                    run = False
                else:
                    # start = pygame.time.get_ticks()
                    run = True
            if e.key == pygame.K_BACKSPACE:
                results += text + '\n'



    pygame.draw.rect(screen, (255, 255, 255), (0, 0, 360, 160))
    if run == True:
        seconds = pygame.time.get_ticks() - (stop-start)

    text = str(str(seconds // 600000) + ':' + str(seconds // 60000) + ':' + str(seconds // 1000) + ':' + str(seconds)[-3::])
    screen.blit(font.render(text,True,color_fg),(100,50))
    if len(results) != 0:
        screen.blit(font.render(results,True,color_fg),(100,60))

    pygame.display.update()
